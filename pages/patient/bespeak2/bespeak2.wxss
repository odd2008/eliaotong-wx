/* pages/book/bespeak2/bespeak2.wxss */
@import "/template/style/book-footer.wxss";
@import "/template/style/doctor-header.wxss";

.container {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    justify-content:  space-between;
    font-size: 32rpx;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
/* 个人简介*/
.box1 {
    height: 350rpx;
    width: auto;
}
.intro {
    padding: 0 20rpx 20rpx 20rpx;
    height: 300rpx;
    width: auto;
}
.intro-tittle {
    height: 60rpx;
    width: auto;
    border-bottom: 1rpx solid #9e9e9e;
    position: relative;
}
.intro-tittle image {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 280rpx;
    bottom: 15rpx;
}
.intro-tittle text {
    position: absolute;
    font-size: 28rpx;
    left: 330rpx;
    top: 0;
    color: #9e9e9e;
}
.intro-content text {
    font-size: 25rpx;
    color: #9e9e9e;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient:vertical;
    /* -webkit-line-clamp:3;  */
}

/* 选择时间*/
.booktime {
    height: 250rpx;
    width: auto;
    display: none;
}
/* 医生上班日期列表*/
.list {
    height:350rpx;
    width: auto;
}
/* 顶部控制*/
.control {
    height: 80rpx;
    width: auto;
    border-bottom: 1rpx solid #9e9e9e;
    line-height: 80rpx;
    padding:  0 20rpx 0 20rpx;
    text-align: center;
    position: relative;
}
.left {
    width:60rpx;
    height: 60rpx;
    float: left;
    margin-top: 10rpx;
}
.right {
    width: 60rpx;
    float: right;
    height: 60rpx;
    margin-top: 10rpx;
}
.state {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    left: 300rpx;
    top: 12rpx;
}
.control text {
    font-size: 28rpx;
    color: #9e9e9e;
    position: absolute;
    left: 350rpx;
    top: 0;
}
/* 日期*/
.date ,.am,.pm{
    text-align: center;
    line-height: 90rpx;
    display: flex;
    flex-direction: row;
    height: 90rpx;
    width: auto;
    font-size: 22rpx;
}
.am,.pm {
    border-top: 1rpx solid #9e9e9e;
}
.date-item,.am-item,.pm-item {
    width: 12.5%;
    height: auto;
    border-right: 1rpx solid #9e9e9e;
}
.pm {
    border-bottom: 1rpx solid #9e9e9e;
}
/* button  */
.work {
  width: 92rpx;
  height: 50rpx;
  font-size: 18rpx;
  background: #09BB07;
  color: #fff;
}
.rest {
  width: 92rpx;
  height: 50rpx;
  font-size: 18rpx;
  background: #9e9e9e;
  color: #fff;
}