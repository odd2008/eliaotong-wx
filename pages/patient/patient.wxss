/* pages/patient/patient.wxss */

@import "/template/style/head-ad.wxss";


/* 挂号信息  */

.info {
  background: #3FD397;
  opacity: 0.5;
  height: 250rpx;
  position: relative;
  font-size: 45rpx;
  font-weight: bold;
}
.name {
  position: absolute;
  left: 50rpx;
  top: 25rpx;
}
.num {
  position: absolute;
  left: 350rpx;
  top: 25rpx;
}
.allNum {
  position: absolute;
  top: 50%;
  left: 50rpx;
}
.waitNum {
  position: absolute;
  top: 50%;
  left: 350rpx;
}

/* 是否显示广告 */
.top-ad {
  /* display: none; */
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page-body {
  background: #EBEBEB;
}
.nav {
  width: 100%;
  height: 110rpx;
  background: #ffffff;
  margin-top: 40rpx;
}
.icon {
  margin-left: 40rpx;
  padding-top: 20rpx;
}
.icon image{
  width: 75rpx;
  height: 75rpx;
  float: left;
  
}
.text {
  line-height: 80rpx;
  font-size: 33rpx;
  font-weight: 600;
  margin-left: 130rpx; 
}
/*弹窗  */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
}
.modal-text {
  font-weight: bold;
  font-size: 50rpx;
  text-align: center;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
}